<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% endblock %}
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">TeamFlow</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                </li>
                
                <!-- Sprint Management -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="sprintDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Gestion des Sprints
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="sprintDropdown">
                        <li><a class="dropdown-item" href="{{ path('app_sprint_index') }}">Liste des Sprints</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ path('app_sprint_sync') }}">Synchroniser avec Jira</a></li>
                    </ul>
                </li>

                <!-- KPIs -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="kpiDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        KPIs
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="kpiDropdown">
                        <li><a class="dropdown-item" href="{{ path('app_sprint_velocity') }}">Vélocité</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_throughput_index') }}">Débit</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_deployment_frequency_index') }}">Fréquence de Déploiement</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_blockers_index') }}">Blocages</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ path('app_bugs_index') }}">Bugs</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_mttr_index') }}">MTTR</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ path('app_prediction_index') }}">
                            <i class="fas fa-crystal-ball"></i> Prédictions
                        </a></li>
                        <li><a class="dropdown-item" href="{{ path('app_prediction_dashboard') }}">
                            <i class="fas fa-tachometer-alt"></i> Dashboard Prédictions
                        </a></li>
                        <li><a class="dropdown-item" href="{{ path('app_prediction_debug') }}">
                            <i class="fas fa-bug"></i> Debug Prédictions
                        </a></li>
                    </ul>
                </li>

                <!-- Tools -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="toolsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Outils
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="toolsDropdown">
                       
                        <li><a class="dropdown-item" href="{{ path('app_commitment_index') }}">Engagement</a></li>
                    </ul>
                </li>

                <!-- Administration -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Administration
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                        <li><a class="dropdown-item" href="{{ path('app_time_period_list') }}">Périodes</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_team') }}">Utilisateurs</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ path('app_google_calendar') }}">Google Calendar</a></li>
                        <li><a class="dropdown-item" href="{{ path('config_velocity') }}">Configuration Vélocité</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Contenu de la page -->
<div class="container my-5">
    {% block body %}{% endblock %}
</div>


<!-- Footer -->
<footer class="bg-dark text-white py-3 mt-5">
    <div class="container d-flex justify-content-between align-items-center">
        <span>&copy; 2024 Studi</span>
    </div>
</footer>

</body>
</html>
