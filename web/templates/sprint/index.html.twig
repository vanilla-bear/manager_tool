{% extends 'base.html.twig' %}

{% block title %}Sprints History{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Sprints History</h1>
            <a href="{{ path('app_sprint_sync') }}" class="btn btn-primary">
                <i class="fas fa-sync"></i> Sync Sprints
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Team Metrics</h5>
                <p class="card-text">
                    Average Velocity: <strong>{{ averageVelocity|number_format(1) }} points/day</strong>
                </p>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Sprint</th>
                        <th>Period</th>
                        <th>Planned Capacity (days)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for sprint in sprints %}
                        <tr>
                            <td>{{ sprint.name }}</td>
                            <td>
                                {{ sprint.startDate|date('Y-m-d') }} to {{ sprint.endDate|date('Y-m-d') }}
                            </td>
                            <td>
                                {{ sprint.plannedCapacityDays|number_format(1) }}
                            </td>
                            <td>
                                <a href="{{ path('app_sprint_edit', {'id': sprint.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
{% endblock %} 