{% extends 'base.html.twig' %}

{% block title %}Sprint Velocity{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Sprint Velocity</h1>
            <a href="{{ path('app_sprint_sync') }}" class="btn btn-primary">
                <i class="fas fa-sync"></i> Sync Sprints
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Team Metrics</h5>
                <p class="card-text">
                    Average Velocity: <strong>{{ averageVelocity|number_format(1) }} points/day</strong>
                </p>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Sprint</th>
                        <th>Period</th>
                        <th>Completed Points</th>
                        <th>Committed Points</th>
                        <th>Completion Rate</th>
                        <th>Devs Terminés</th>
                        <th>Planned Capacity (days)</th>
                        <th>Actual Capacity (days)</th>
                        <th>Velocity (points/day)</th>
                    </tr>
                </thead>
                <tbody>
                    {% for sprint in sprints %}
                        <tr>
                            <td>{{ sprint.name }}</td>
                            <td>
                                {{ sprint.startDate|date('Y-m-d') }} to {{ sprint.endDate|date('Y-m-d') }}
                            </td>
                            <td>{{ sprint.completedPoints }}</td>
                            <td>{{ sprint.committedPoints }}</td>
                            <td>
                                {% set completion_rate = sprint.completionRate %}
                                {% set dev_completion_rate = sprint.devCompletionRate %}
                                <div class="mb-2">
                                    <small class="text-muted">Done</small>
                                    <div class="progress">
                                        <div class="progress-bar {% if completion_rate < 80 %}bg-warning{% elseif completion_rate > 100 %}bg-danger{% else %}bg-success{% endif %}"
                                             role="progressbar"
                                             style="width: {{ min(completion_rate, 100) }}%"
                                             aria-valuenow="{{ completion_rate }}"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            {{ completion_rate|number_format(1) }}%
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <small class="text-muted">Devs Terminés</small>
                                    <div class="progress">
                                        <div class="progress-bar bg-info"
                                             role="progressbar"
                                             style="width: {{ min(dev_completion_rate, 100) }}%"
                                             aria-valuenow="{{ dev_completion_rate }}"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            {{ dev_completion_rate|number_format(1) }}%
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-info me-2">{{ sprint.devsTerminesCount }}</span>
                                    <small class="text-muted">
                                        ({{ sprint.devsTerminesPoints }} pts)
                                    </small>
                                </div>
                            </td>
                            <td>
                                {{ sprint.plannedCapacityDays|number_format(1) }}
                            </td>
                            <td>{{ sprint.capacityDays|number_format(1) }}</td>
                            <td>
                                {% set velocity = sprint.velocityPerDay %}
                                {% if velocity %}
                                    {{ velocity|number_format(1) }}
                                {% else %}
                                    N/A
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
{% endblock %} 