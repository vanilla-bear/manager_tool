{% extends 'base.html.twig' %}

{% block title %}Sprint Velocity{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Sprint Velocity</h1>
            <a href="{{ path('app_sprint_sync') }}" class="btn btn-primary">
                <i class="fas fa-sync"></i> Sync Sprints
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Team Metrics</h5>
                <p class="card-text">
                    Average Velocity: <strong>{{ averageVelocity|number_format(1) }} points/day</strong>
                </p>
            </div>
        </div>

        <!-- Section d'explication des mÃ©triques -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle"></i> Comprendre les mÃ©triques
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h6><strong>ðŸ“‹ Committed Points (Scope Initial)</strong></h6>
                        <p class="text-muted small">
                            Points des tickets qui existaient <strong>avant le dÃ©but du sprint</strong>.<br>
                            C'est l'engagement initial de l'Ã©quipe.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h6><strong>âž• Added Points (Ajouts)</strong></h6>
                        <p class="text-muted small">
                            Points des tickets <strong>ajoutÃ©s pendant le sprint</strong>.<br>
                            Montre l'Ã©volution du scope initial.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h6><strong>âœ… Completed Points (LivrÃ©)</strong></h6>
                        <p class="text-muted small">
                            Points des tickets avec le statut <strong>"Done"</strong>.<br>
                            C'est ce qui a rÃ©ellement Ã©tÃ© livrÃ©.
                        </p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-6">
                        <h6><strong>ðŸ“Š Completion Rate (Taux de RÃ©alisation)</strong></h6>
                        <p class="text-muted small">
                            Pourcentage = (Completed Points / <strong>(Committed + Added Points)</strong>) Ã— 100<br>
                            Mesure la capacitÃ© Ã  livrer par rapport au scope total du sprint.
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h6><strong>ðŸ‘¥ Devs TerminÃ©s</strong></h6>
                        <p class="text-muted small">
                            Taux = (Devs TerminÃ©s Points / <strong>(Committed + Added Points)</strong>) Ã— 100<br>
                            Montre la progression des dÃ©veloppeurs sur le scope total.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Sprint</th>
                        <th>Period</th>
                        <th>
                            <span data-bs-toggle="tooltip" data-bs-placement="top" title="Points des tickets existants avant le dÃ©but du sprint - scope initial">
                                ðŸ“‹ Committed Points
                                <i class="fas fa-question-circle text-muted"></i>
                            </span>
                        </th>
                        <th>
                            <span data-bs-toggle="tooltip" data-bs-placement="top" title="Points des tickets ajoutÃ©s pendant le sprint - Ã©volution du scope">
                                âž• Added Points
                                <i class="fas fa-question-circle text-muted"></i>
                            </span>
                        </th>
                        <th>
                            <span data-bs-toggle="tooltip" data-bs-placement="top" title="Points des tickets avec statut 'Done' - ce qui a Ã©tÃ© rÃ©ellement livrÃ©">
                                âœ… Completed Points
                                <i class="fas fa-question-circle text-muted"></i>
                            </span>
                        </th>
                        <th>Completion Rate</th>
                        <th>Devs TerminÃ©s</th>
                    </tr>
                </thead>
                <tbody>
                    {% for sprint in sprints %}
                        <tr>
                            <td>{{ sprint.name }}</td>
                            <td>
                                {{ sprint.startDate|date('Y-m-d') }} to {{ sprint.endDate|date('Y-m-d') }}
                            </td>
                            <td>
                                <span class="badge bg-primary">{{ sprint.committedPoints }}</span>
                            </td>
                            <td>
                                {% if sprint.addedPointsDuringSprint > 0 %}
                                    <span class="badge bg-warning">+{{ sprint.addedPointsDuringSprint }}</span>
                                    <small class="text-muted d-block">
                                        ({{ sprint.addedPointsPercentage|number_format(1) }}%)
                                    </small>
                                {% else %}
                                    <span class="badge bg-secondary">0</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-success">{{ sprint.completedPoints }}</span>
                            </td>
                            <td>
                                {% set completion_rate = sprint.completionRate %}
                                {% set dev_completion_rate = sprint.devCompletionRate %}
                                <div class="mb-2">
                                    <small class="text-muted">Done</small>
                                    <div class="progress">
                                        <div class="progress-bar {% if completion_rate < 80 %}bg-warning{% elseif completion_rate > 100 %}bg-danger{% else %}bg-success{% endif %}"
                                             role="progressbar"
                                             style="width: {{ min(completion_rate, 100) }}%"
                                             aria-valuenow="{{ completion_rate }}"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            {{ completion_rate|number_format(1) }}%
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <small class="text-muted">Devs TerminÃ©s</small>
                                    <div class="progress">
                                        <div class="progress-bar bg-info"
                                             role="progressbar"
                                             style="width: {{ min(dev_completion_rate, 100) }}%"
                                             aria-valuenow="{{ dev_completion_rate }}"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            {{ dev_completion_rate|number_format(1) }}%
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-info me-2">{{ sprint.devsTerminesCount }}</span>
                                    <small class="text-muted">
                                        ({{ sprint.devsTerminesPoints }} pts)
                                    </small>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Initialiser les tooltips Bootstrap
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
{% endblock %} 