{% extends 'base.html.twig' %}

{% block title %}Configurer la Vélocité{% endblock %}

{% block body %}
    <h1 class="mb-4">Configurer la Vélocité de l'équipe</h1>

    <!-- Formulaire de configuration de la vélocité -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="h5 mb-0">Paramètres de Vélocité</h2>
        </div>
        <div class="card-body">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.velocity, 'Vélocité', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.velocity, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    <!-- Affichage des messages de succès -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4" role="alert">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}
